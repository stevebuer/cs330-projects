# Example terraform.tfvars file for Vultr deployment
# Copy to terraform.tfvars and fill in your values

# ===== Vultr Deployment =====
environment = "vultr"
vm_size     = "small"
vm_name     = "debian-server-prod"
debian_version = "12"

# Set vultr_api_key via environment variable instead:
# export TF_VAR_vultr_api_key="your-api-key-here"

vultr_region = "ewr"  # New Jersey - options: ewr, lax, ord, ams, lon, sjc, syd, sgp, etc.

tags = {
  project = "cs330"
  managed = "terraform"
  env     = "production"
}
