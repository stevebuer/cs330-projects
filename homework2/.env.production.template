# Production Environment Configuration Template for DX Cluster System
#
# Copy this file to .env and fill in the appropriate values
# DO NOT commit this file with real passwords to version control

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dxcluster
DB_USER=dx_scraper
DB_PASSWORD=your_secure_password_here

# For remote database connections (uncomment and configure as needed)
#DB_HOST=your-database-server.com
#DB_PORT=5432
#DB_SSL_MODE=require
#DB_SSL_CERT=/path/to/client-cert.pem
#DB_SSL_KEY=/path/to/client-key.pem
#DB_SSL_ROOT_CERT=/path/to/ca-cert.pem

# Web Interface Database User (read-only)
WEB_DB_USER=dx_web_user
WEB_DB_PASSWORD=your_web_user_password_here

# Application Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false

# DX Cluster Configuration
DX_CLUSTER_HOST=dx.k3lr.com
DX_CLUSTER_PORT=23
CALLSIGN=YOUR_CALLSIGN

# Monitoring and Alerts (optional)
#ALERT_EMAIL=admin@yourdomain.com
#SMTP_SERVER=smtp.yourdomain.com
#SMTP_PORT=587
#SMTP_USERNAME=alerts@yourdomain.com
#SMTP_PASSWORD=smtp_password_here

# Performance Tuning
MAX_CONCURRENT_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30
COMMIT_BATCH_SIZE=10
COMMIT_INTERVAL_SECONDS=60