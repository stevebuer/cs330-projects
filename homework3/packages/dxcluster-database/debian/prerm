#!/bin/bash
set -e

# Pre-removal script for dxcluster-database

case "$1" in
    remove|upgrade|deconfigure)
        echo "Removing DX Cluster Database package..."
        echo "Note: Database content is preserved"
        echo "To completely remove the database, run:"
        echo "sudo -u postgres dropdb dxcluster"
        ;;
        
    failed-upgrade)
        ;;
        
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0